extends _components/layout.pug
include _components/mixins/mixins.pug

//- head
//- ===================================
append head
	- var urlCSS = 'css/';
	- var urlLogo = 'img/';
	- var page = 'home';

	include _includes/head.pug


//- Content
//- ===================================
block content
	- var selected = 'Tab';	
	- var urlAncor = '../#'
	- var urlIndex = 'index.html';
	- var urlImg = 'img/';
	- var urlPages = 'pages-components/';
	- var page = 'home'
	
	//Main
	main.main-home
		.container
			div.grid-container
				div.grid-8
					h1.main-home__title Web Components
					ul.grid-home
						+components('pages-components/slide.html', 'slide.svg', 'slide', 'Slide')
						+components('pages-components/tab.html', 'tab.svg', 'tab', 'Tab')
						+components('pages-components/accordion.html', 'accordion.svg', 'accordion', 'Accordion')
						+components('pages-components/collapse.html', 'collapse.svg', 'collapse', 'Collapse')
						+components('pages-components/modal.html', 'modal.svg', 'modal', 'Modal')
						+components('pages-components/dropdown.html', 'dropdown.svg', 'dropdown', 'Dropdown')
						+components('pages-components/activate-navigation.html', 'active-nav.svg', 'active-navigation', 'Active navigation')
						+components('pages-components/scroll-animation.html', 'scroll-animation.svg', 'scroll-animation', 'Scroll-animation')
						+components('pages-components/tooltip.html', 'tooltip.svg', 'tooltip', 'Tooltip Popover')
				div.grid-4
					aside.main-home__download
						h2.main-home__subtitle Arquivos
						p.main-home__text Para utilizar o projeto, faça o download dos #[a(href="download.rar" download) arquivos]. 
						a.main-home__link()
						p.main-home__text Insira o arquivo <b>components.css</b> no header do html e <b>default.css</b>, caso deseje utilizar os estilos padrões.
						p.main-home__text Adicionar também o arquivo <b>components.js</b>, antes de fechar a tag body no html.
						h2.main-home__subtitle Documentação do slide
						p.main-home__text Para adicionar mais de um slide na mesma página, acesse a documentação #[a(href="documentation.html" target="_blank") documentação].


	//- scripts
	//- ===================================

	prepend scripts
		- var urlJS = 'js/'
		include _includes/scripts.pug