            <li><img src="../img/slide/foto5.svg" alt=""></li>
            <li><img src="../img/slide/foto6.svg" alt=""></li>
          </ul>
        </div>
        <div class="arrow-nav">
          <button class="prev" id="prev"></button>
          <button class="next" id="next"></button>
        </div>
      </section>

